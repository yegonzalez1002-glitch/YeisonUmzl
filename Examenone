import random

# Función que suma los dígitos del número
def suma_digitos(numero):
    return sum(int(d) for d in str(numero))

# Función que invierte el número
def invertir_numero(numero):
    return int(str(numero)[::-1])

# Función que verifica si el número es camaleón
def es_camaleon(numero):
    suma = suma_digitos(numero)
    invertido = invertir_numero(numero)

    es_par = suma % 2 == 0
    divisible_por_3 = invertido % 3 == 0

    return es_par and divisible_por_3

# --- Programa principal ---

# Solicitar al usuario cuántos números quiere validar
cantidad = int(input("Cantidad de números a validar: "))

# Generar números aleatorios de 3 a 5 cifras (entre 100 y 99999)
numeros = [random.randint(100, 99999) for _ in range(cantidad)]

# Mostrar los números generados
print("Números generados:", ", ".join(str(n) for n in numeros))

# Evaluar cada número
print("Resultados:")
for numero in numeros:
    if es_camaleon(numero):
        print(f"{numero} → Sí")
    else:
        print(f"{numero} → No")
